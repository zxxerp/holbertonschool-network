#!/usr/bin/env bash
# Script to configure localhost and facebook.com IP addresses

# Backup hosts file
cp /etc/hosts /etc/hosts.bak 2>/dev/null

# Ensure new entries are at the end
# The last matching line takes precedence
echo "127.0.0.2 localhost" >> /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts
